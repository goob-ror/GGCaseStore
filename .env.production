# Production Environment Configuration for GG Catalog Store
# Copy this to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=3000

# Session Configuration (IMPORTANT: Change this to a secure random string)
SESSION_SECRET=your-super-secure-production-session-key-min-32-chars-change-this

# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_NAME=gg_catalog_db

# Database Connection Pool Settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# CORS Configuration (Update with your actual domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=../public/uploads

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_MAX_REQUESTS=10

# Security Configuration
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL Configuration (if handling SSL in Node.js instead of Nginx)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Email Configuration (if you plan to add email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Monitoring and Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
